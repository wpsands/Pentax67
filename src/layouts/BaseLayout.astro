---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'An Astro site with MDX Content Collections' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="site-title">Pagini</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>Built with Astro + MDX Content Collections</p>
    </footer>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: system-ui, -apple-system, sans-serif;
    line-height: 1.6;
    color: #1a1a1a;
    max-width: 48rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  header {
    padding: 1.5rem 0;
    border-bottom: 1px solid #e5e7eb;
    margin-bottom: 2rem;
  }

  .site-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #6366f1;
    text-decoration: none;
  }

  main {
    min-height: 60vh;
  }

  footer {
    margin-top: 3rem;
    padding: 1.5rem 0;
    border-top: 1px solid #e5e7eb;
    text-align: center;
    color: #6b7280;
    font-size: 0.875rem;
  }

  h1 { font-size: 2rem; margin: 1rem 0; }
  h2 { font-size: 1.5rem; margin: 1.5rem 0 0.75rem; }
  h3 { font-size: 1.25rem; margin: 1.25rem 0 0.5rem; }
  p { margin: 0.75rem 0; }
  ul, ol { margin: 0.75rem 0; padding-left: 1.5rem; }
  li { margin: 0.25rem 0; }

  a {
    color: #6366f1;
  }

  pre {
    background: #1e1e1e;
    color: #d4d4d4;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1rem 0;
    font-size: 0.9rem;
  }

  code {
    font-family: 'Fira Code', 'Cascadia Code', monospace;
  }

  :not(pre) > code {
    background: #f3f4f6;
    padding: 0.15rem 0.35rem;
    border-radius: 4px;
    font-size: 0.9em;
  }
</style>
