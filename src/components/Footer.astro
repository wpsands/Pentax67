---
import { url } from '../utils/base';

const currentYear = new Date().getFullYear();

const navLinks = [
  { href: url('/'), label: 'HOME' },
  { href: url('/business'), label: 'BUSINESS' },
  { href: url('/photography'), label: 'PHOTOGRAPHY' },
  { href: url('/resources'), label: 'RESOURCES' },
  { href: url('/contact'), label: 'CONTACT' },
];
---

<footer class="bg-footer-bg text-footer-fg">
  <div class="mx-auto max-w-5xl px-6 py-14">
    <!-- Top row: brand + newsletter -->
    <div class="flex flex-wrap items-center justify-between gap-6">
      <a href={url('/')} class="font-sans text-2xl font-bold uppercase tracking-tight text-white hover:opacity-80 transition-opacity">
        Page Sands
      </a>
      <form
        action="https://formspree.io/f/your-form-id"
        method="POST"
        class="flex gap-3"
      >
        <input
          type="email"
          name="email"
          placeholder="Email Address"
          required
          class="w-48 rounded-sm border border-footer-fg/30 bg-transparent px-4 py-2.5 text-sm text-footer-fg placeholder:text-footer-fg/50 focus:outline-none focus:border-accent"
        />
        <button
          type="submit"
          class="rounded-sm bg-accent px-5 py-2.5 text-sm font-sans font-bold text-accent-foreground transition-colors hover:bg-accent/90"
        >
          Subscribe
        </button>
      </form>
    </div>

    <!-- Columns -->
    <div class="mt-10 grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      <div>
        <h4 class="font-sans text-lg font-bold text-white border-b-2 border-accent pb-2 mb-4">GTM Strategy</h4>
        <ul class="space-y-2.5">
          <li><a href={url('/business')} class="text-sm text-footer-fg/80 hover:text-white transition-colors underline underline-offset-2">AI-First GTM</a></li>
          <li><a href="https://www.sandsdx.com/" target="_blank" rel="noopener noreferrer" class="text-sm text-footer-fg/80 hover:text-white transition-colors underline underline-offset-2">SandsDX</a></li>
        </ul>
      </div>
      <div>
        <h4 class="font-sans text-lg font-bold text-white border-b-2 border-accent pb-2 mb-4">Photography</h4>
        <ul class="space-y-2.5">
          <li><a href={url('/photography')} class="text-sm text-footer-fg/80 hover:text-white transition-colors underline underline-offset-2">Gallery</a></li>
          <li><a href="https://artofwanderingabout.com" target="_blank" rel="noopener noreferrer" class="text-sm text-footer-fg/80 hover:text-white transition-colors underline underline-offset-2">Art of Wandering About</a></li>
          <li><a href="https://charlestonfilmphotography.com" target="_blank" rel="noopener noreferrer" class="text-sm text-footer-fg/80 hover:text-white transition-colors underline underline-offset-2">Charleston Film Photo</a></li>
        </ul>
      </div>
      <div>
        <h4 class="font-sans text-lg font-bold text-white border-b-2 border-accent pb-2 mb-4">Resources</h4>
        <ul class="space-y-2.5">
          <li><a href={url('/resources')} class="text-sm text-footer-fg/80 hover:text-white transition-colors underline underline-offset-2">Articles</a></li>
          <li><a href={url('/articles/charleston-seo-llm-optimization')} class="text-sm text-footer-fg/80 hover:text-white transition-colors underline underline-offset-2">Charleston SEO Guide</a></li>
        </ul>
      </div>
      <div>
        <h4 class="font-sans text-lg font-bold text-white border-b-2 border-accent pb-2 mb-4">Connect</h4>
        <ul class="space-y-2.5">
          <li><a href="https://www.linkedin.com/in/wpsands/" target="_blank" rel="noopener noreferrer" class="text-sm text-footer-fg/80 hover:text-white transition-colors underline underline-offset-2">LinkedIn</a></li>
          <li><a href="https://www.instagram.com/pagesands/" target="_blank" rel="noopener noreferrer" class="text-sm text-footer-fg/80 hover:text-white transition-colors underline underline-offset-2">Instagram</a></li>
          <li><a href="https://www.flickr.com/photos/page/" target="_blank" rel="noopener noreferrer" class="text-sm text-footer-fg/80 hover:text-white transition-colors underline underline-offset-2">Flickr</a></li>
        </ul>
      </div>
    </div>

    <!-- Bottom nav + copyright -->
    <div class="mt-10 border-t border-footer-fg/20 pt-6">
      <nav class="flex flex-wrap gap-x-2 gap-y-1 text-xs font-sans uppercase tracking-wide text-footer-fg/60">
        {navLinks.map((link, i) => (
          <>
            <a href={link.href} class="hover:text-white transition-colors underline underline-offset-2">{link.label}</a>
            {i < navLinks.length - 1 && <span>/</span>}
          </>
        ))}
      </nav>
      <p class="mt-4 text-xs text-footer-fg/40">
        &copy; {currentYear} Page Sands. All rights reserved.
      </p>
    </div>
  </div>
</footer>
