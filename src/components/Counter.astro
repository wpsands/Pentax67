---
interface Props {
  initial?: number;
}

const { initial = 0 } = Astro.props;
---

<div class="counter">
  <span class="counter-label">Counter value:</span>
  <span class="counter-value">{initial}</span>
</div>

<style>
  .counter {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    margin: 1rem 0;
    background: #f0f0f0;
    border-radius: 8px;
    font-family: monospace;
    font-size: 1.1rem;
  }

  .counter-value {
    font-weight: bold;
    color: #6366f1;
  }
</style>
