---
import BaseLayout from '../layouts/BaseLayout.astro';
import { url } from '../utils/base';

const articles = [
  {
    title: 'Charleston SEO & LLM Optimization: A Local Business Guide',
    description: 'How Charleston businesses can optimize for both traditional search engines and large language models. A practical guide to modern discoverability.',
    href: url('/articles/charleston-seo-llm-optimization'),
    date: '2025',
    tags: ['SEO', 'LLM', 'Charleston'],
  },
];

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Resources - Page Sands',
  description: 'Articles and resources on AI-first GTM strategy, SEO, LLM optimization, and demand generation.',
  url: 'https://pagesands.com/resources',
  mainEntity: {
    '@type': 'ItemList',
    itemListElement: articles.map((article, index) => ({
      '@type': 'ListItem',
      position: index + 1,
      url: `https://pagesands.com${article.href}`,
      name: article.title,
    })),
  },
};
---

<BaseLayout
  title="Resources - Page Sands | Articles on GTM, SEO & AI Strategy"
  description="Articles and resources on AI-first GTM strategy, SEO, LLM optimization, and demand generation for growth-stage SaaS."
  jsonLd={jsonLd}
>
  <!-- Hero -->
  <section class="mx-auto max-w-5xl px-6 py-16 sm:py-24">
    <div class="max-w-3xl">
      <p class="font-sans text-sm font-bold uppercase tracking-widest text-muted-foreground">Resources</p>
      <h1 class="mt-4 font-sans text-4xl font-bold uppercase tracking-tight text-foreground sm:text-5xl">
        Articles &amp; Insights
      </h1>
      <p class="mt-6 text-lg leading-relaxed">
        Frameworks, strategies, and practical guides on AI-first GTM, SEO, LLM optimization, and growing technology companies.
      </p>
    </div>
  </section>

  <!-- Articles List -->
  <section class="border-t-[3px] border-accent">
    <div class="mx-auto max-w-5xl px-6 py-16">
      <div class="space-y-8">
        {articles.map((article) => (
          <a
            href={article.href}
            class="group block border-b border-border pb-8"
          >
            <div class="flex flex-wrap items-center gap-3 text-sm text-muted-foreground">
              <span class="font-sans font-bold uppercase">{article.date}</span>
              {article.tags.map((tag) => (
                <span class="border border-border px-2.5 py-0.5 text-xs font-sans font-bold uppercase tracking-wide text-muted-foreground">
                  {tag}
                </span>
              ))}
            </div>
            <h2 class="mt-3 font-sans text-xl font-bold text-foreground group-hover:text-accent transition-colors">{article.title}</h2>
            <p class="mt-2 text-base leading-relaxed text-muted-foreground">{article.description}</p>
            <span class="gold-link mt-4 inline-block text-base font-medium">
              Read article &rarr;
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
