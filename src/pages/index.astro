---
import BaseLayout from '../layouts/BaseLayout.astro';
import { url } from '../utils/base';

const jsonLd = [
  {
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    name: 'Page Sands',
    url: 'https://pagesands.com',
    description: 'AI-first GTM strategist for growth-stage SaaS and film photographer.',
  },
  {
    '@context': 'https://schema.org',
    '@type': 'Person',
    name: 'Page Sands',
    url: 'https://pagesands.com',
    jobTitle: 'AI-First GTM Strategist',
    worksFor: {
      '@type': 'Organization',
      name: 'SandsDX',
      url: 'https://www.sandsdx.com/',
    },
    address: {
      '@type': 'PostalAddress',
      addressLocality: 'Charleston',
      addressRegion: 'SC',
      addressCountry: 'US',
    },
    sameAs: [
      'https://www.linkedin.com/in/wpsands/',
      'https://www.instagram.com/pagesands/',
      'https://www.flickr.com/photos/page/',
    ],
  },
  {
    '@context': 'https://schema.org',
    '@type': 'FAQPage',
    mainEntity: [
      {
        '@type': 'Question',
        name: 'What is AI-first GTM?',
        acceptedAnswer: {
          '@type': 'Answer',
          text: 'AI-first GTM means embedding AI agents and automation at the core of your go-to-market strategy — not bolting them on as an afterthought.',
        },
      },
      {
        '@type': 'Question',
        name: 'Who do you work with?',
        acceptedAnswer: {
          '@type': 'Answer',
          text: 'I work with growth-stage SaaS companies, typically Series A through C, that are ready to scale their go-to-market operations.',
        },
      },
      {
        '@type': 'Question',
        name: 'What is SandsDX?',
        acceptedAnswer: {
          '@type': 'Answer',
          text: 'SandsDX is my AI-first GTM consulting practice. I help B2B teams scale by removing friction through simplicity and systems thinking.',
        },
      },
    ],
  },
];
---

<BaseLayout
  title="Page Sands - AI-First GTM Strategist & Film Photographer"
  description="Helping technology companies grow with clarity, discipline, and speed. AI-first GTM strategy for growth-stage SaaS."
  jsonLd={jsonLd}
>
  <!-- Hero — conversational, editorial style -->
  <section class="mx-auto max-w-5xl px-6 py-16 sm:py-24">
    <div class="grid gap-12 sm:grid-cols-[1fr_auto] items-start">
      <div class="max-w-2xl">
        <p class="text-xl leading-relaxed sm:text-2xl">
          Hi, I'm Page Sands.
        </p>

        <p class="mt-6 text-lg leading-relaxed">
          I'm an <strong>AI-first GTM strategist</strong> helping growth-stage SaaS companies scale with clarity, discipline, and speed. I'm the founder of <a href="https://www.sandsdx.com/" target="_blank" rel="noopener noreferrer" class="gold-link font-medium">SandsDX</a>, an AI-first GTM consulting practice.
        </p>

        <p class="mt-6 text-lg leading-relaxed">
          I also shoot <a href={url('/photography')} class="gold-link font-medium">film photography</a> — 35mm, medium format, and large format — capturing people, places, and the urban landscape from Charleston, SC and beyond.
        </p>

        <p class="mt-6 text-lg leading-relaxed">
          I've led marketing and digital teams at companies like <strong>ConnectWise</strong>, <strong>Drift</strong>, <strong>Blackbaud</strong>, and <strong>Oleria</strong>. Now I help B2B teams build go-to-market systems that scale — powered by AI agents, grounded in strategy.
        </p>

        <p class="mt-6 text-lg leading-relaxed">
          What you should do now is <a href={url('/business')} class="gold-link font-medium">learn about my consulting work</a> or <a href={url('/contact')} class="gold-link font-medium">get in touch</a>.
        </p>
      </div>

      <!-- Headshot placeholder -->
      <div class="hidden sm:block">
        <div class="w-64 h-80 rounded-sm bg-muted flex items-center justify-center text-muted-foreground text-sm">
          <span>Headshot</span>
        </div>
      </div>
    </div>
  </section>

  <!-- What I Do -->
  <section class="border-t-[3px] border-accent">
    <div class="mx-auto max-w-5xl px-6 py-16">
      <h2 class="font-sans text-2xl font-bold uppercase tracking-tight text-foreground">What I Do</h2>
      <p class="mt-3 text-lg text-muted-foreground">Two disciplines. One mindset: simplicity and systems thinking.</p>
      <div class="mt-10 grid gap-8 sm:grid-cols-2">
        <div>
          <h3 class="font-sans text-xl font-bold text-foreground">AI-First GTM Strategy</h3>
          <p class="mt-3 text-base leading-relaxed">
            Founder &amp; Principal of SandsDX. I architect strategy, drive pipeline, and modernize GTM operations for growth-stage SaaS companies. Multi-channel demand programs, AI-driven workflows, and website experiences built for ABM.
          </p>
          <a href={url('/business')} class="gold-link mt-4 inline-block text-base font-medium">
            Learn more &rarr;
          </a>
        </div>
        <div>
          <h3 class="font-sans text-xl font-bold text-foreground">Film Photography</h3>
          <p class="mt-3 text-base leading-relaxed">
            35mm, medium format, and large format film photography. Capturing people, places, and the urban landscape from Charleston and beyond. A practice rooted in patience and intention.
          </p>
          <a href={url('/photography')} class="gold-link mt-4 inline-block text-base font-medium">
            View gallery &rarr;
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="border-t border-border">
    <div class="mx-auto max-w-5xl px-6 py-16">
      <h2 class="font-sans text-2xl font-bold uppercase tracking-tight text-foreground">FAQ</h2>
      <div class="mt-8 space-y-6">
        <details class="group border-b border-border pb-5">
          <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-foreground">
            What is AI-first GTM?
            <span class="ml-2 text-accent transition-transform group-open:rotate-45 text-xl">+</span>
          </summary>
          <p class="mt-3 text-base leading-relaxed text-muted-foreground">
            AI-first GTM means embedding AI agents and automation at the core of your go-to-market strategy — not bolting them on as an afterthought. It covers demand generation, pipeline operations, content, and analytics.
          </p>
        </details>
        <details class="group border-b border-border pb-5">
          <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-foreground">
            Who do you work with?
            <span class="ml-2 text-accent transition-transform group-open:rotate-45 text-xl">+</span>
          </summary>
          <p class="mt-3 text-base leading-relaxed text-muted-foreground">
            I work with growth-stage SaaS companies, typically Series A through C, that are ready to scale their go-to-market operations with clarity, discipline, and speed.
          </p>
        </details>
        <details class="group border-b border-border pb-5">
          <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-foreground">
            What is SandsDX?
            <span class="ml-2 text-accent transition-transform group-open:rotate-45 text-xl">+</span>
          </summary>
          <p class="mt-3 text-base leading-relaxed text-muted-foreground">
            SandsDX is my AI-first GTM consulting practice. I help B2B teams scale by removing friction through simplicity and systems thinking.
          </p>
        </details>
        <details class="group border-b border-border pb-5">
          <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-foreground">
            Are you available for consulting?
            <span class="ml-2 text-accent transition-transform group-open:rotate-45 text-xl">+</span>
          </summary>
          <p class="mt-3 text-base leading-relaxed text-muted-foreground">
            Yes. I take on a limited number of engagements at any time. <a href={url('/contact')} class="gold-link">Get in touch</a> and let's discuss your goals.
          </p>
        </details>
      </div>
    </div>
  </section>
</BaseLayout>
