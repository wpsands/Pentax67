---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const posts = await getCollection('blog');
const sorted = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Pagini â€” Astro + MDX Blog">
  <section class="hero">
    <h1>Pagini</h1>
    <p>A test site built with raw MDX in Astro Content Collections.</p>
  </section>

  <section class="posts">
    <h2>Blog Posts</h2>
    <ul class="post-list">
      {sorted.map((post) => (
        <li class="post-card">
          <a href={`/blog/${post.id}`}>
            <h3>{post.data.title}</h3>
            <p class="post-description">{post.data.description}</p>
            <div class="post-meta">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-us', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
              <div class="post-tags">
                {post.data.tags.map((tag: string) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 2rem 0;
  }

  .hero p {
    color: #6b7280;
    font-size: 1.1rem;
  }

  .posts h2 {
    border-bottom: 1px solid #e5e7eb;
    padding-bottom: 0.5rem;
  }

  .post-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;
  }

  .post-card {
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    transition: border-color 0.2s;
  }

  .post-card:hover {
    border-color: #6366f1;
  }

  .post-card a {
    display: block;
    padding: 1.25rem;
    text-decoration: none;
    color: inherit;
  }

  .post-card h3 {
    margin: 0 0 0.25rem;
    color: #1a1a1a;
  }

  .post-description {
    color: #6b7280;
    margin: 0 0 0.75rem;
    font-size: 0.95rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: #9ca3af;
  }

  .post-tags {
    display: flex;
    gap: 0.35rem;
  }

  .tag {
    background: #eef2ff;
    color: #6366f1;
    padding: 0.15rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
  }
</style>
